<h2>Log in</h2>
<small>Only for administration</small><br>
<p> <%= @message %> </p>

<form action='/login/attempt' method='post' class="form-inline well">
  <input class="form-control form-control-sm" type="text" name='username' placeholder="username" autofocus><br><br>
  <input class="form-control form-control-sm" type="password" name='password' placeholder="password" autofocus><br><br>
  <input class="btn btn-success" type='submit' value='Log in'>
</form>
